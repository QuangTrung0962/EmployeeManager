<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EmployeeManager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/PagedList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse ms-4">
                <ul class="navbar-nav me-auto">
                    <li>@Html.ActionLink("Employees", "Index", "Employees", new { area = "" }, new { @class = "nav-link active" })</li>
                    <li>@Html.ActionLink("Danh mục Tỉnh", "Index", "Provinces", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Danh mục Huyện", "Index", "Districts", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Danh mục xã", "Index", "Towns", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Danh mục văn bằng", "Index", "Qualifications", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="border :1px solid #ccc">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>