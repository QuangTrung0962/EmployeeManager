@model DTO.ProvinceDto
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="p-3" style="border :1px solid #ccc; min-height: 250px">

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <div class="d-flex flex-column">
                        <label>1. Tên Tỉnh/Thành phố</label>
                        <div>
                            @Html.EditorFor(model => model.ProvinceName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProvinceName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="d-flex justify-content-between">
                <div class="d-grid align-items-center">
                    @Html.ActionLink("< Danh sách Tỉnh/Thành phố", "Index")
                </div>
                <div class="">
                    <input type="reset" value="Hủy" class="btn btn-danger" />
                    <input type="submit" value="Xác nhận" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

