@model DTO.ViewModels.DistrictViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3" style="border :1px solid #ccc; min-height: 250px">
    <div class="row">
        <div>
            <h3>Bạn chắn chắn muốn xóa Quận/Huyện này?</h3>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayName("Tỉnh/Thành phố")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProvinceName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayName("Quận/Huyện")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DistrictName)
                    </dd>
                </dl>

                @using (Html.BeginForm("Delete", "Districts", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        @Html.ActionLink("Quay lại", "Index", new { area = "" }, new { @class = "btn btn-light" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
