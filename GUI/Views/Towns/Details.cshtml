@model DTO.ViewModels.TownViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3" style="border :1px solid #ccc; min-height: 250px">
    <div class="row">
        <div>
            <h4>Thông tin chi tiết</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayName("Phường/Xã")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TownName)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayName("Quận/Huyện")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DistrictName)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayName("Tỉnh/Thành phố")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProvinceName)
                </dd>

            </dl>
        </div>
        <div>
            @Html.ActionLink("Cập nhập", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink("Quay lại", "Index", new { area = "" }, new { @class = "btn btn-light" })
        </div>
    </div>
</div>

